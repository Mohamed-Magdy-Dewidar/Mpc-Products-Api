// prisma/schema.prisma

generator client {
  provider      = "prisma-client-js"
  // Add "linux-musl-openssl-3.0.x" to the targets
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")  // <--- This line works perfectly in Prisma 5
}

model Product {
  id        String   @id @default(uuid())
  name      String
  price     Float
  category  String
  imageUrl  String
  inStock   Boolean
  variants  String[]
  createdAt DateTime @default(now())
}